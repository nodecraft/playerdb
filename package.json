{
	"name": "playerdb",
	"version": "1.0.0",
	"private": true,
	"description": "Super scalable Minecraft and Steam player information, powered by Cloudflare Workers",
	"homepage": "https://github.com/nodecraft/playerdb#readme",
	"bugs": {
		"url": "https://github.com/nodecraft/playerdb/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nodecraft/playerdb.git"
	},
	"license": "MIT",
	"author": "Nodecraft Inc.",
	"type": "module",
	"scripts": {
		"check-types": "tsc --noEmit && tsc --noEmit -p test/tsconfig.json",
		"deploy": "wrangler deploy",
		"deploy:prod": "wrangler deploy --env production",
		"deploy:staging": "wrangler deploy --env staging",
		"dev": "wrangler dev",
		"lint": "npm run lint:js && npm run lint:json",
		"lint:js": "eslint \"**/*.{js,ts}\"",
		"lint:js:fix": "eslint \"**/*.{js,ts}\" --fix",
		"lint:json": "eslint \"**/*.json\"",
		"test": "npm run test:unit",
		"test:unit": "vitest run",
		"test:unit:dev": "vitest watch"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.12.1",
		"@cloudflare/workers-types": "4.20260108.0",
		"@nodecraft/eslint-config": "46.0.0",
		"@types/node": "24.10.4",
		"@typescript-eslint/eslint-plugin": "8.52.0",
		"cross-env": "10.1.0",
		"dotenv": "17.2.3",
		"eslint": "8.57.1",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-json": "4.0.1",
		"eslint-plugin-unicorn": "56.0.1",
		"hono": "4.11.4",
		"steamid": "2.1.0",
		"typescript": "5.9.3",
		"vitest": "3.2.4",
		"webpack-cli": "6.0.1",
		"wrangler": "4.58.0"
	},
	"engines": {
		"node": ">=24",
		"npm": ">=11"
	}
}
